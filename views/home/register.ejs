<%- include ../layouts/Header -%>

    <div class="container">
        <div class="margin" style="height: 76px;"></div>
        <div class="text-center">
            <h2>Create Account</h2>
        </div>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <%- include ../partials/messages -%>
                <form action="/user/register" method="POST">
                    <div class="form-group">
                        <label for="FName">Họ & Tên</label>
                        <input 
                            type="text" 
                            class="form-control" 
                            id="txtFname" 
                            name="FName" 
                            value="<%= typeof FName != 'undefined' ? FName : '' %>"
                            >
                    </div>
                    <div class="form-group">
                        <label for="UName">UserName</label>
                        <input 
                            type="text" 
                            class="form-control" 
                            id="txtUname" 
                            name="UName"
                            value="<%= typeof UName != 'undefined' ? UName : '' %>"
                            >
                    </div>
                    <div class="form-group">
                        <label for="PWord">Password</label>
                        <input 
                            type="password" 
                            class="form-control"  
                            id="txtPassword" 
                            name="PWord"
                            value="<%= typeof PWord != 'undefined' ? PWord : '' %>"
                            >
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">confirm Password</label>
                        <input 
                            type="password" 
                            class="form-control"  
                            id="txtConfirm" 
                            name="PWord2"
                            value="<%= typeof PWord2 != 'undefined' ? PWord2 : '' %>"
                            >
                    </div>
                    <div class="form-group">
                        <label for="Email">Email address</label>
                        <input 
                            type="email" 
                            class="form-control"  
                            aria-describedby="emailHelp" 
                            id="txtEmail" 
                            name="Email"
                            value="<%= typeof Email != 'undefined' ? Email : '' %>"
                            >
                    </div>
                    <div class="form-group">
                        <label for="job">Example multiple select</label>
                        <select multiple class="form-control" id="job" name = "job" onchange="getSelectValue();">
                        <option value="2">Subcriber</option>
                        <option value="3">writer</option>
                        <option value="4">editor</option>
                        <option value="1">adminstrator</option>
                        </select>
                    </div>
                    <script>
                        function getSelectValue (){
                            var selectedValue = document.getElementById(job).value;
                            value = selectedValue;
                        }
                    </script>
                    <div class="form-group">
                        <label for="SDT">SĐT</label>
                        <input 
                            type="text" 
                            class="form-control" 
                            id="txtSDT" 
                            name="SDT"
                            value="<%= typeof SDT != 'undefined' ? SDT : '' %>"
                            >
                    </div>
                    <div class="form-group">
                        <label for="Address">Địa Chỉ</label>
                        <input 
                            type="text" 
                            class="form-control" 
                            id="txtAddress" 
                            name="Address"
                            value="<%= typeof Address != 'undefined' ? Address : '' %>"
                            >
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>
            <div class="col-md-4"></div>
            
        </div>
        <div class="margin" style="height: 156px;"></div>
    </div>
<%- include ../layouts/Footer -%>
